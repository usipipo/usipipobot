# =============================================================================
# uSipipo VPN Manager - Environment Configuration
# =============================================================================
# Rellena TODOS los valores marcados como REQUERIDO
# =============================================================================

# =============================================================================
# Telegram Bot Configuration (REQUERIDO)
# =============================================================================
TELEGRAM_TOKEN=TU_TELEGRAM_BOT_TOKEN_AQUI  # REQUERIDO: Obtener de @BotFather
AUTHORIZED_USERS=                          # Opcional: 123456789,987654321

# =============================================================================
# Server Network Information (Auto-detected by your script)
# =============================================================================
SERVER_IPV4=
SERVER_IPV6=
SERVER_IP=

# =============================================================================
# WireGuard Server Configuration (Auto-generated by your script)
# =============================================================================
WG_INTERFACE=
WG_SERVER_IPV4=
WG_SERVER_IPV6=
WG_SERVER_PORT=
WG_SERVER_PUBKEY=
WG_SERVER_PRIVKEY=
WG_ALLOWED_IPS=
WG_PATH=/etc/wireguard
WG_ENDPOINT=

# =============================================================================
# Outline VPN Server Configuration (Auto-generated by your script)
# =============================================================================
OUTLINE_API_URL=
OUTLINE_CERT_SHA256=
OUTLINE_API_PORT=
OUTLINE_KEYS_PORT=
OUTLINE_SERVER_IP=
OUTLINE_DASHBOARD_URL=

# =============================================================================
# FastAPI Backend Configuration (REQUERIDO)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=TU_SECRET_KEY_AQUI_GENERADA_CON_OPENSSL  # REQUERIDO: openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=  # Opcional: http://localhost:3000,https://tudominio.com

# =============================================================================
# PostgreSQL Database Configuration (REQUERIDO)
# =============================================================================
# PostgreSQL auto-alojado - Ya no requiere Supabase
# Las credenciales se generan autom치ticamente con scripts/setup.sh
# =============================================================================
DB_NAME=usipipo                              # Nombre de la base de datos
DB_USER=usipipo                              # Usuario de la base de datos
DB_PASSWORD=                                 # Auto-generado por setup.sh
DB_HOST=localhost                            # Host de PostgreSQL
DB_PORT=5432                                 # Puerto de PostgreSQL

# DATABASE_URL - Formato completo (auto-generado por setup.sh)
# Formato: postgresql+asyncpg://user:password@host:5432/database_name
DATABASE_URL=postgresql+asyncpg://usipipo:password@localhost:5432/usipipo

# Configuraci칩n del pool de conexiones
DB_POOL_SIZE=10
DB_TIMEOUT=30

# NOTA: Las variables de Supabase han sido eliminadas en la versi칩n 2.1.0
# El sistema ahora usa PostgreSQL auto-alojado exclusivamente

# =============================================================================
# Application & Security Settings
# =============================================================================
APP_ENV=production
ADMIN_EMAIL=tu@email.com                    # Opcional
DEFAULT_LANG=es
VPN_KEY_EXPIRE_DAYS=0
MAX_KEYS_PER_USER=5

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/vpn_manager.log
SENTRY_DSN=                                 # Opcional
ENABLE_METRICS=false

# =============================================================================
# Rate Limiting & Security
# =============================================================================
TELEGRAM_RATE_LIMIT=30
API_RATE_LIMIT=60
ENABLE_IP_WHITELIST=false
API_ALLOWED_IPS=                            # Opcional: 192.168.1.1,10.0.0.1

# =============================================================================
# System Paths & Directories
# =============================================================================
VPN_TEMPLATES_PATH=./templates
TEMP_PATH=./temp
QR_CODE_PATH=./static/qr_codes
CLIENT_CONFIGS_PATH=./static/configs

# =============================================================================
# Advanced Settings
# =============================================================================
DB_POOL_SIZE=10
DB_TIMEOUT=30
TELEGRAM_WEBHOOK_URL=                       # Opcional
SESSION_TIMEOUT=60

# =========================================================================
# GROQ IA API - Asistente Sip
# =========================================================================
GROQ_API_KEY=                             # REQUERIDO: Obtener de https://console.groq.com
GROQ_MODEL=llama-3.1-8b-instant          # Modelo a usar (llama-3.1-8b-instant o llama-3.3-70b-versatile)
GROQ_TEMPERATURE=0.7                      # Temperatura (0.0-2.0): 0.0 = determinista, 2.0 = creativo
GROQ_MAX_TOKENS=1000                     # M치ximo de tokens en respuesta (100-4096)
GROQ_TIMEOUT=15                           # Timeout en segundos (5-60)