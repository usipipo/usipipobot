# =============================================================================
# uSipipo VPN Manager - Environment Configuration
# =============================================================================
# Rellena TODOS los valores marcados como REQUERIDO
# Las variables VPN y DB se generan automáticamente con scripts/setup.sh
# =============================================================================

# =============================================================================
# Telegram Bot Configuration (REQUERIDO)
# =============================================================================
TELEGRAM_TOKEN=TU_TELEGRAM_BOT_TOKEN_AQUI  # REQUERIDO: Obtener de @BotFather
AUTHORIZED_USERS=                          # Opcional: 123456789,987654321
ADMIN_ID=                                  # REQUERIDO: Tu ID de Telegram
ADMIN_EMAIL=                               # Opcional
BOT_USERNAME=usipipo_bot
TELEGRAM_WEBHOOK_URL=                      # Opcional
TELEGRAM_RATE_LIMIT=30

# =============================================================================
# Server Network Information (Auto-generated by setup.sh)
# =============================================================================
SERVER_IPV4=
SERVER_IPV6=
SERVER_IP=

# =============================================================================
# WireGuard Server Configuration (Auto-generated by setup.sh)
# =============================================================================
WG_INTERFACE=wg0
WG_SERVER_IPV4=10.88.88.1
WG_SERVER_IPV6=fd42:42:42::1
WG_SERVER_PORT=51820
WG_SERVER_PUBKEY=
WG_SERVER_PRIVKEY=
WG_ALLOWED_IPS=0.0.0.0/0,::/0
WG_PATH=/etc/wireguard
WG_ENDPOINT=
WG_CLIENT_DNS_1=1.1.1.1
WG_CLIENT_DNS_2=1.0.0.1

# =============================================================================
# Outline VPN Server Configuration (Auto-generated by setup.sh)
# =============================================================================
OUTLINE_API_URL=
OUTLINE_CERT_SHA256=
OUTLINE_API_PORT=
OUTLINE_KEYS_PORT=
OUTLINE_SERVER_IP=
OUTLINE_DASHBOARD_URL=

# =============================================================================
# FastAPI Backend Configuration (REQUERIDO)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=TU_SECRET_KEY_AQUI_GENERADA_CON_OPENSSL  # REQUERIDO: openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=                              # Opcional: http://localhost:3000,https://tudominio.com
API_RATE_LIMIT=60

# =============================================================================
# PostgreSQL Database Configuration (REQUERIDO)
# =============================================================================
# PostgreSQL auto-alojado - Credenciales generadas automáticamente por setup.sh
DB_NAME=usipipo
DB_USER=usipipo
DB_PASSWORD=                               # Auto-generado por setup.sh
DB_HOST=localhost
DB_PORT=5432

# DATABASE_URL - Formato: postgresql+asyncpg://user:password@host:5432/database_name
DATABASE_URL=postgresql+asyncpg://usipipo:password@localhost:5432/usipipo

DB_POOL_SIZE=10
DB_TIMEOUT=30

# =============================================================================
# Application & Security Settings
# =============================================================================
APP_ENV=production
NODE_ENV=production
PROJECT_NAME=uSipipo VPN Manager
DEFAULT_LANG=es
VPN_KEY_EXPIRE_DAYS=30
MAX_KEYS_PER_USER=5
ENABLE_IP_WHITELIST=false
API_ALLOWED_IPS=                          # Opcional: 192.168.1.1,10.0.0.1

# =============================================================================
# Plans and Billing Configuration
# =============================================================================
FREE_PLAN_MAX_KEYS=2
FREE_PLAN_DATA_LIMIT_GB=10
VIP_PLAN_MAX_KEYS=10
VIP_PLAN_DATA_LIMIT_GB=50
VIP_PLAN_COST_STARS=10
REFERRAL_COMMISSION_PERCENT=10
BILLING_CYCLE_DAYS=30
KEY_CLEANUP_DAYS=90
MIN_DEPOSIT_FOR_DELETE=1

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/vpn_manager.log
ENABLE_METRICS=false
SENTRY_DSN=                               # Opcional

# =============================================================================
# System Paths & Directories
# =============================================================================
TEMP_PATH=./temp
QR_CODE_PATH=./static/qr_codes
CLIENT_CONFIGS_PATH=./static/configs
